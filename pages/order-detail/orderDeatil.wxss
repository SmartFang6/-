.rate {
  color: #ff9900;
  margin-left: 15rpx;
  font-size: 28rpx;
}

.content {
  margin-top: 100rpx;
}

.scene-item {
  display: flex;
  height: 140rpx;
  margin: 10rpx 0;
  justify-content: center;
  align-items: center;
  text-align: center;

}
.scene-item:nth-child(odd) {
  background-color: #fff;
}
.scene-item>view {
  flex: 1;
}
.c-time{
  font-size: 30rpx;
}
.c-type{
  font-size: 28rpx;
}
.c-type text{
  display: block;
}
.c-btn .buy {
  width: 140rpx;
  height: 60rpx;
  border-radius: 6rpxpx;
  padding: 10rpx 12rpx;
  border: 1px solid #076FA2;
  color: #076FA2;
  font-size: 28rpx;
}