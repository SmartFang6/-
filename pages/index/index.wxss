.content{
  margin-top: 90rpx;
}
.list_item{
  display: flex;
  margin: 18rpx 5rpx;
}
.item_img{
  flex: 1;
  width: 224rpx;
  height: 316rpx;
}
.item_img image{
  width: 85%;
}
.item_text{
  flex: 1;
}
.item_text .h2{
  font-size: 34rpx;
  font-weight: bold;
}
.item_text view:nth-last-child(1),.item_text view:nth-last-child(2){
  font-size: 32rpx;
}
.item_text view:nth-last-child(2){
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}
.movie-type {
	margin: 16rpx 0;
	font-size: 24rpx;
}

.movie-type text {
	display: inline-block;
}

.movie-type text:nth-child(1) {
	background-color: #076FA2;
	padding: 4rpx 12rpx;
	border-bottom-left-radius: 4rpx;
	border-top-left-radius: 4rpx;
	color: #fff
}

.movie-type text:nth-child(2) {
	background-color: #fff;
	padding: 2rpx 12rpx;
	border-bottom-right-radius: 4rpx;
	border-top-right-radius: 4rpx;
	border: 2rpx solid #076FA2;
	color: #076FA2
}
.grades_buy{
  flex:1;
  text-align: center;
  position: relative;
  margin-right: 20rpx;
}
.grades {
	font-weight: bold;
	color: #f90;
	font-size: 32rpx;
	text-align: right;
	margin-top: 60rpx;
	height: 60rpx;
}

.buy {
	padding: 16rpx 30rpx;
	background-color: #076fa2;
	position: absolute;
	text-align: center;
	right: 0;
	bottom: 20rpx;
	border-radius: 6rpx;
}

.buy navigator {
	display: block;
	width: 100%;
	height: 100%;
	color: #fff;
}
